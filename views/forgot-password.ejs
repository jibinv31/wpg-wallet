<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Forgot Password ‚Äì WPG Wallet</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .toast-container {
            position: fixed;
            bottom: 1rem;
            right: 1rem;
            z-index: 1055;
        }
    </style>
</head>

<body class="bg-light">

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="w-100" style="max-width: 400px;">
            <div class="card p-4 shadow w-100">
                <h3 class="mb-4 text-center">üîê Forgot Password</h3>
                <form id="forgotForm">
                    <div class="mb-3">
                        <label for="email" class="form-label">Enter your email</label>
                        <input type="email" id="email" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
                </form>
                <div class="text-center mt-3">
                    <a href="/login">Back to login</a>
                </div>
            </div>
        </div>
    </div>

    <!-- ‚úÖ Bootstrap Toast -->
    <div class="toast-container">
        <div id="resetToast" class="toast text-white bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body" id="resetToastBody">Password reset link sent!</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>

    <!-- üì¶ Firebase + Toast Logic -->
    <script type="module">
        import { auth, sendPasswordResetEmail } from "/js/firebase-config.js";

        const form = document.getElementById("forgotForm");
        const emailInput = document.getElementById("email");
        const toastElement = document.getElementById("resetToast");
        const toastBody = document.getElementById("resetToastBody");

        form.addEventListener("submit", async (e) => {
            e.preventDefault();
            const email = emailInput.value.trim();

            try {
                await sendPasswordResetEmail(auth, email);
                toastBody.textContent = `‚úÖ Password reset link sent to ${email}`;
                toastElement.classList.remove("bg-danger");
                toastElement.classList.add("bg-success");
            } catch (err) {
                toastBody.textContent = "‚ùå Failed to send reset link. Try again.";
                toastElement.classList.remove("bg-success");
                toastElement.classList.add("bg-danger");
            }

            const toast = new bootstrap.Toast(toastElement);
            toast.show();
        });
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>