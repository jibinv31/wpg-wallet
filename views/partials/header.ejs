<nav class="navbar navbar-light bg-light px-4 shadow">
  <span class="navbar-brand mb-0 h1 text-primary fw-bold">WPG-Wallet</span>

  <% if (user) { %>
    <div class="d-flex align-items-center gap-3">
      <!-- Notification Bell Icon -->
      <a href="/notifications" class="btn btn-outline-secondary btn-sm position-relative">
        <i class="bi bi-bell-fill"></i>
        <% if (typeof notificationCount !== 'undefined' && notificationCount > 0) { %>
          <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
            <%= notificationCount %>
            <span class="visually-hidden">unread notifications</span>
          </span>
        <% } %>
      </a>
      <a href="/logout" class="btn btn-outline-danger btn-sm">Sign Out</a>
    </div>
  <% } %>
</nav>
