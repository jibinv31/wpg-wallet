<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WPG Wallet â€“ Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f8f9fa;
        }

        .form-section {
            background-color: #fff;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
            width: 100%;
            max-width: 600px;
        }

        .form-control::placeholder {
            font-size: 0.9rem;
        }

        .blue-gradient {
            background: linear-gradient(to right, #3b82f6, #2563eb);
            color: white;
        }
    </style>
</head>

<body>
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="w-100 d-flex justify-content-center">
            <form id="signupForm" class="form-section">
                <h3 class="mb-4">Sign up</h3>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>First Name</label>
                        <input type="text" class="form-control" placeholder="John" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Last Name</label>
                        <input type="text" class="form-control" placeholder="Doe" />
                    </div>
                </div>

                <div class="mb-3">
                    <label>Address</label>
                    <input type="text" class="form-control" placeholder="Enter your specific address" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>State</label>
                        <input type="text" class="form-control" placeholder="ex: NY" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Postal Code</label>
                        <input type="text" class="form-control" placeholder="ex: 11101" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Date of Birth</label>
                        <input type="date" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>SSN</label>
                        <input type="text" class="form-control" placeholder="ex: 1234" />
                    </div>
                </div>

                <div class="mb-3">
                    <label>Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email"
                        required />
                </div>

                <div class="mb-4">
                    <label>Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter your password" required />
                </div>

                <button type="submit" class="btn blue-gradient w-100">Sign up</button>

                <div class="text-center mt-3">
                    Already have an account? <a href="/login">Login</a>
                </div>

                <div class="text-center mt-3">
                    <button type="button" class="btn btn-outline-danger w-100" id="googleLogin">
                        <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" width="20"
                            class="me-2" />
                        Sign up with Google
                    </button>
                </div>
            </form>

            <!-- ðŸ”„ Spinner for success animation -->
            <div id="redirectSpinner" class="form-section text-center d-none">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Redirecting...</span>
                </div>
                <p class="mt-3 mb-0">Signup successful! Redirecting to login...</p>
            </div>
        </div>
    </div>

    <!-- Firebase Auth -->
    <script type="module" src="/js/firebase-config.js"></script>
    <script type="module" src="/js/auth.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>